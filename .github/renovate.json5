{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  configMigration: true,
  extends: [
    'config:recommended',
    'customManagers:dockerfileVersions',
    'group:all',
  ],
  automerge: false,
  separateMinorPatch: true,
  gitAuthor: 'renovate[bot] <bot@renovateapp.com>',
  enabledManagers: [
    'dockerfile',
    'custom.regex',
  ],
  packageRules: [
    {
      matchFileNames: [
        'post_start/Dockerfile',
      ],
      enabled: false,
    },
    {
      matchPackageNames: [
        'golang',
        'nginx',
      ],
      enabled: false,
    },
    {
      matchDatasources: [
        'repology',
      ],
      groupName: 'alpine packages',
      groupSlug: 'alpine',
      matchPackageNames: [
        '/^alpine_/',
      ],
    },
    {
      "matchPackageNames": ["/^alpine_.*iputils/"],
      "description": "Allow increased maxMajorIncrement for alpine iputils package",
      "maxMajorIncrement": 0
    }
  ],
  dependencyDashboard: false,
  labels: [
    'dependencies',
  ],
  separateMajorMinor: false,
}
